<section class="login center">
  <h3>Sign in</h3>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "centered-panel" }) do |f| %>
    <%= hidden_fields(f, :email, :password) %>

    <core-field>
      <core-icon icon="account-circle"></core-icon>
      <paper-input label="Email" type="email" error="Please insert a valid email" layout vertical id="email"></paper-input>
    </core-field>

    <core-field>
      <core-icon icon="lock"></core-icon>
      <paper-input label="Password" type="password" layout vertical id="password"></paper-input>
    </core-field>

    <core-field>
      <core-icon icon="store"></core-icon>
      <%= f.select(:office, options_for_select([['El Dorado', User::DORADO], ['Clayton', User::CLAYTON]])) %>
    </core-field>

    <div class="center buttons">
      <a class="submit" %>
        <div class="button raised primary">
          <div class="center" fit>Log in</div>
          <paper-ripple fit></paper-ripple>
        </div>
      </a>
      <%= render "devise/shared/links" %>
    </div>

  <% end %>
</section>

<%= render "shared/submit_form" %>

<script>
  (function() {
    $('.submit').on('click', function() {
      submit_form('new_user', 'user', ['email', 'password']);
    });
  })();
</script>