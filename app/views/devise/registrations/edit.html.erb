<%= devise_error_messages! %>

<section class="login">
  <h3>Edit Account</h3>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "centered-panel", method: :put }) do |f| %>

    <%= hidden_fields(f, :email, :password, :password_confirmation, :current_password) %>

    <core-field>
      <core-icon icon="account-circle"></core-icon>
      <paper-input label="Email" type="email" error="Please insert a valid email" layout vertical id="email"></paper-input>
    </core-field>

     <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <core-field>
      <core-icon icon="lock"></core-icon>
      <paper-input label="Password" type="password" layout vertical id="password"></paper-input>
    </core-field>

    <core-field>
      <core-icon icon="lock"></core-icon>
      <paper-input label="Password confirmation" type="password" layout vertical id="password_confirmation"></paper-input>
    </core-field>

    <core-field>
      <core-icon icon="lock"></core-icon>
      <paper-input label="Current password" type="password" layout vertical id="current_password"></paper-input>
    </core-field>

    <div class="center buttons">
      <a class="submit" %>
        <div class="button raised primary">
          <div class="center" fit>Update</div>
          <paper-ripple fit></paper-ripple>
        </div>
      </a>
      <%= render "devise/shared/links" %>

      <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

      <%= link_to "Back", :back %>
    </div>
  <% end %>
</section>

<%= render "shared/submit_form" %>

<script>
  (function() {
    $('.submit').on('click', function() {
      submit_form('new_user', 'user', ['email', 'password', 'password_confirmation', 'current_password']);
    });
  })();
</script>
