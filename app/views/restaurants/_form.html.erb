<div class="col-12-xs">
  <%= form_for @restaurant, :html => { :multipart => true } do |f| %>

    <%= hidden_fields(f, :image, :name, :description, :slogan, :phone_number, :email, :address, :twitter, :instagram, :facebook, :website, :delivery) %>

    <input type="file" class="filestyle file" data-buttonText="Find file" data-buttonName="btn-primary" id="image">
    <core-field>
      <paper-input label="Email" type="email" error="Please insert a valid email" layout vertical id="email"></paper-input>
    </core-field>
    <core-field>
      <paper-input label="Name" type="text" layout vertical id="name"></paper-input>
    </core-field>
    <core-field>
      <paper-input multiline label="Description" layout vertical id="description"></paper-input>
    </core-field>
    <core-field>
      <paper-input label="Slogan" type="text" layout vertical id="slogan"></paper-input>
    </core-field>
    <core-field>
      <paper-input label="Email" type="number" error="Please insert a phone number" layout vertical id="phone_number"></paper-input>
    </core-field>
    <core-field>
      <paper-input label="Email" type="email" error="Please insert a valid email" layout vertical id="email"></paper-input>
    </core-field>
    <div class="field">
      <%= f.label :address %><br>
      <%= f.text_area :address %>
    </div>
    <div class="field">
      <%= f.label :twitter %><br>
      <%= f.text_field :twitter %>
    </div>
    <div class="field">
      <%= f.label :instagram %><br>
      <%= f.text_field :instagram %>
    </div>
    <div class="field">
      <%= f.label :facebook %><br>
      <%= f.text_field :facebook %>
    </div>
    <div class="field">
      <%= f.label :website %><br>
      <%= f.text_field :website %>
    </div>
    <div class="field">
      <%= f.label :delivery %><br>
      <%= f.check_box :delivery %>
    </div>
    <div>
      <a class="submit" %>
        <div class="button raised primary">
          <div class="center" fit>Create</div>
          <paper-ripple fit></paper-ripple>
        </div>
      </a>
    </div>
  <% end %>
</div>

<script>
  (function() {
    $('.submit').on('click', function() {
      submit_form('new_restaurant', 'restaurant', ['image', 'name', 'description', 'slogan', 'phone_number', 'email', 'address', 'twitter', 'instagram', 'facebook', 'website', 'delivery']);
    });
  })();
</script>
